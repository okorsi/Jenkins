pipeline {
    agent any
    environment {
      build = "options { disableConcurrentBuilds() }" 
}

     

    stages {
        stage('1-Find-a-Name') {
          steps { 
            script {
            if (env.JOB_NAME.contains('PROD')) {
                "$build"
                }
    }
    }
}
        stage('2-Deploy') {
        "$build"
            steps {
                echo "Start of Stage Deploy..."
                echo "Deploying......."
                echo "$build"
                sh "ls -la"
                sh '''
                   echo "Line1"
                   echo "Line2"
                '''
                echo "End of Stage Build..."
            }
        }
        stage('3-Celebrate') {
            steps {
                echo "Slava Ukraine!"
            }
        }       
    }
  }
