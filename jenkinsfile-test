pipeline {
    agent any
    environment {
      PROJECT_NAME = "TESTING"
      OWNER_NAME   = "Oleksii"
      
    }

    stages {
        stage('1-Check-job-name') {
            steps {
                if (( ${JOB_NAME} == *"TEST"* )); then
		echo  "It's TESTING ENV"
                else
                echo "It's noTESTING ENV"
		fi
            }
        }
        stage('2-Test') {
            steps {
                echo "Start of Stage Test..."
                echo "Testing......."
                echo "Project name is ${PROJECT_NAME}"
                echo "Owner is ${OWNER_NAME}"
                echo "End of Stage Build..."
		echo "Job name is ${JOB_NAME}"
            }
        }
        stage('3-Deploy') {
            steps {
                echo "Start of Stage Deploy..."
                echo "Deploying......."
                sh "ls -la"
                sh '''
                   echo "Line1"
                   echo "Line2"
                '''
                echo "End of Stage Build..."
            }
        }
        stage('4-Celebrate') {
            steps {
                echo "Slava Ukraine!"
            }
        }	
    }
}
